<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="neha_gupta.cscimageupload.ImageUpload"
    android:orientation="vertical"
    android:weightSum="25">

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/preview"
        android:layout_margin="10dp"
        android:layout_weight="19">
    </ImageView>

    <Button
        android:text="Capture Image"
        android:id="@+id/Button01"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_btn"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="12.5sp"
        android:textStyle="bold">
    </Button>

    <Button
        android:id="@+id/btnCompress"
        android:text="Compress Image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/orange_btn"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="12.5sp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:text="Note:- Before take image pls enable 'Save Location Info' option in your mobile camera settings."></TextView>

</LinearLayout>
